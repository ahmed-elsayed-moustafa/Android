<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <!-- Theme for the small button in the top right (homescreen) -->
    <style name="buttonSmall">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/informationbutton_shape</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="buttonLand">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!-- Theme for the copyright notice regarding the data bank in the middle bottom (homescreen) -->
    <style name="copyrightnotice">
        <item name="android:text">@string/notice_copyright</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">#bdbdbd</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Theme for the large country and topic buttons on the homescreen -->
    <style name="buttonTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Used primarily for flash screen for swag effects -->
    <style name="transparentTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/animation.SplashScreen</item>
    </style>

    <style name="animation" parent="android:Animation" />
    <style name="animation.SplashScreen">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

</resources>